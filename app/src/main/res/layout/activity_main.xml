<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#7470be"
    android:weightSum="1">



    <fragment
        android:name="com.example.keshavdulal.a14_simple_drawing.GraphFragment"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:id="@+id/graphfragment"
        tools:layout="@layout/graph_fragment"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/record"
        android:layout_marginBottom="10dp" />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECORD"
        android:id="@+id/record"
        android:background="#aeb7d2"
        android:textColor="#bf050b"
        android:layout_marginStart="76dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:contextClickable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/play"
        android:background="#aeb7d2"
        android:textColor="#bf050b"
        android:layout_above="@+id/listfragment"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="81dp"
        android:clickable="true" />
    <fragment
        android:name="com.example.keshavdulal.a14_simple_drawing.ListFragment"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:id="@+id/listfragment"
        tools:layout="@layout/list_fragment"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/record"
        android:layout_marginTop="10dp" />


</RelativeLayout>